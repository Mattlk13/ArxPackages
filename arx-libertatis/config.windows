#!/bin/bash

architectures=( 'x86' 'x64' )

toolchains[windows-x86]='msvc-14-22-x86'
toolchains[windows-x64]='msvc-14-22-x64'

readme_transforms+=(
	--discard '* scripts *'
)

cmake_options_windows_x64+=(
	-DBUILD_TOOLS=0
	-DBUILD_CRASHREPORTER=0
	-DRUNTIME_LIBEXECDIR='.;..;../x86'
)

required_binaries_x86+=(
	arxtool
	arxsavetool
	arxunpak
	arxcrashreporter
)

copy_files+=(
	
	[':arx.bat']='/'
	
)
