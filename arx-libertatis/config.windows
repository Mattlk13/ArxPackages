#!/bin/bash

architectures=( 'x86' 'x64' )

toolchains[windows-x86]='msvc-12-0-x86'
toolchains[windows-x64]='msvc-12-0-x64'

readme_transforms+=(
	--discard '* scripts *'
)

cmake_options_windows_x86+=(
	-DBUILD_CRASHREPORTER=1
)

cmake_options_windows_x64+=(
	-DRUNTIME_LIBEXECDIR='.;..;../x86'
)

copy_files+=(
	
	# Create a data subdirectory (with a README)
	[':data/README.windows.md']='data/README.txt'
	
)
