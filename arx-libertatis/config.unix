#!/bin/bash

inherit_projects+=( 'innoextract' )

cmake_options+=(
	-DICON_TYPE=png
	-DWITH_OPENGL=epoxy
	-DUSE_X11=1
)

required_binaries+=(
	arx-install-data
)

forbidden_libraries+=(
	
	# Epoxy and SDL should load libGL dynamically
	'libGL.so*'
	
)

copy_files+=(
	
	# Create a data subdirectory (with a README)
	[':data/README.md']='data/'
	
)
